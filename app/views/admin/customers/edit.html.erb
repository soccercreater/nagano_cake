   <h1><span><%= @customer.first_name %><%= @customer.last_name %></span>さんの会員情報編集</h1>
    <%= form_with model: @customer,url:admin_customer_path(@customer.id), method: :patch, local:true do |f| %>
   <h4>会員ID</h4>
   <p><%= @customer.id %></p>
   <h4>氏名</h4>
    <%= f.text_field :first_name %>
    <%= f.text_field :last_name %>
   <h4>フリガナ</h4>
    <%= f.text_field :first_name_kana %>
    <%= f.text_field :last_name_kana %>
   <h4>郵便番号</h4>
    <%= f.text_field :postal_code %>
   <h4>住所</h4>
    <%= f.text_field :address %>
   <h4>電話番号</h4>
    <%= f.text_field :telephone_number %>
   <h4>メールアドレス</h4>
    <%= f.text_field :email %>
   <p>会員ステータス</p>
   <%= f.radio_button :is_active, :true %>有効<br>
   <%= f.radio_button :is_active, :false %>退会

  <%= f.submit '変更を保存する' %>
<% end %>