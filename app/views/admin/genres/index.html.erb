<h1><ジャンル一覧・追加></h1>
  <%= form_with model: @genre,url:admin_genres_path, local:true do |f| %>
   <h4>ジャンル名</h4>
   <%= f.text_field :name %>

  <%= f.submit '新規登録' %>
<% end %>

<table class="table">
  <thead>
   <h2>ジャンル</h2>
      <tr><% @genres.each do |genre| %>
       <th scope="col"><%= genre.name %><%= link_to "編集する",edit_admin_genre_path(genre.id) %></th>
      </tr>
        <% end %>
   </thead>
  <tbody>
  </tbody>
 </table>

