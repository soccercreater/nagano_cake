 <table class="table">
  <thead>
   <h2>注文履歴一覧</h2>
   <th scope="col">購入日時</th>
     <th>購入者</th>
     <th>注文個数</th>

    <% @orders.each do |order| %>
      <tr>
       <th scope="col"><%= order.created_at %></th>
        <th scope="col"><%= link_to admin_order_path(order.id) do %>
        <%= current_customer.first_name %><%= current_customer.last_name %>
       <% end %>

       </th>
       <% @sum = 0 %>
        <% order.order_details.each do |order_detail| %>
         <% @sum += order_detail.amount %>
        <% end %>
         <th scope="col"><%= @sum %></th>
      <% end %>

      </tr>
   </thead>
  <tbody>
  </tbody>
 </table>



