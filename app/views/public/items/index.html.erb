<h2>商品一覧（全<span><%= Item.count %></span>件）</h2>

<% @items.each do |item| %>
  <div>
    <%= link_to item_path(item.id) do %>
    <p><%= item.image_id %></p>
     <%= image_tag item.image, size: "150x150" %>
     <% end %>
    <p><%= item.name %></p>
    <p>¥<%= item.price  %></p>
  </div>
<% end %>
<%= paginate @items %>

