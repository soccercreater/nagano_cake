<h1>配送先登録/一覧</h1>
  <%= form_with model: @address,url:addresses_path,method: :post, local:true do |f| %>
   <h4>郵便番号（ハイフンなし）</h4>
    <%= f.text_field :postal_code %>
   <h4>住所</h4>
    <%= f.text_field :address %>
   <h4>宛名</h4>
    <%= f.text_field :name %>
    <%= f.submit '新規登録' %>
  <% end %>
<table class="table">
  <thead>
     <th scope="col">郵便番号</th>
     <th>住所</th>
     <th>宛名</th>
     <th></th>
      <tr><% @addresses.each do |address| %>
       <th scope="col"><%= address.postal_code %></th>
       <th scope="col"><%= address.address %></th>
       <th scope="col"><%= address.name %></th>
       <th scope="col"><%= link_to "編集する",edit_address_path(address.id) %>
                       <%= link_to "削除", address_path(address.id),method: :delete %></th>
      </tr>
        <% end %>
   </thead>
  <tbody>
  </tbody>
 </table>

