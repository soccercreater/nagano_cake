 <table class="table">
  <tbody>
   <h2>注文履歴詳細</h2>
   <h2>注文情報</h2>
     <th scope="col">注文日</th>
     <th>配送先</th>
     <th>支払方法</th>
      <tr>
       <th scope="col"><%= @order.created_at %></th>
       <th scope="col">〒<%= @order.postal_code %><%= @order.address %><%= @order.customer.first_name %><%= @order.customer.last_name %></th>
       <th scope="col"><%= @order.payment_method %></th>
      </tr>
  </tbody>
 </table>

  <table class="table">
  <tbody>
   <h2>注文内容</h2>
     <th>商品</th>
     <th>単価（税込）</th>
     <th>個数</th>
     <th>小計</th>
      <tr><% @order_details.each do |order_detail| %>
        <th scope="col"><%= order_detail.item.name %></th>
        <th scope="col"><%= order_detail.price %></th>
        <th scope="col"><%= order_detail.amount %></th>
        <th scope="col"><%= order_detail.price * order_detail.amount %></th>
      </tr>
        <% end %>
  </tbody>
 </table>


 <table class="table">
  <tbody>
   <h2>請求情報</h2>
       <th>商品合計</th>
       <th>配送料</th>
       <th>ご請求額</th>
        <tr>
         <th scope="col"><%= @total %></th>
         <th scope="col"><%= @shipping_cost %></th>
         <th scope="col"><%= @total_payment %></th>
        </tr>
   </tbody>
 </table>