<h2>注文情報入力</h2>
<p>支払方法</p>
    <%= form_with model: @order,url: confirm_path, local:true do |f| %>
    <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %><br>
    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>

<p>お届け先</p>
    <h4><%= f.radio_button :address_option, 0 %>ご自身の住所</h4>
      <p><%= current_customer.address %></p>
    <h4><%= f.radio_button :address_option, 1 %>登録先住所から選択</h4>
         <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
    <h4><%= f.radio_button :address_option, 2 %>新しいお届け先</h4>
      <p>郵便番号（ハイフンなし）</p>
       <%= f.text_field :postal_code %>
      </p>住所</p>
       <%= f.text_area :address %>
      </p>宛名</p>
       <%= f.text_field :name %><br>
       <%= f.submit "確認画面に進む" %>
  <% end %>
