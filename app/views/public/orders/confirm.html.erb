<h2>注文情報確認</h2>
<div>
  <% @cart_items.each do |cart_item| %>
        <p><%= cart_item.item.name %></p>
        <p><%= (cart_item.item.price* 1.1).floor %></p>
        <p><%= cart_item.amount %> </p>
        <p><%= (cart_item.item.price * 1.1).floor * cart_item.amount %>
  <% end %>
  <div>
   送料<%= @shipping_cost %>
   商品合計<%= @total %>
   請求金額<%= @total_payment %>
  </div>
</div>
  <%= form_with model: @order,url: orders_path,method: :post, local:true do |f| %>
   <%= f.hidden_field :amount %>
   <%= f.hidden_field :payment_method %>
   <%= f.hidden_field :address %>
   <%= f.hidden_field :postal_code %>
   <%= f.hidden_field :total_payment %>
   <%= f.hidden_field :shipping_cost %>
   <p>支払方法<%= @order.payment_method %></p>

   <p>お届け先<%= @order.address %><%= @order.postal_code %><%= @order.name %></p>

   <%= f.submit "注文を確定する" %>
   <% end %>